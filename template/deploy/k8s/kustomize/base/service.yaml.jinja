apiVersion: v1
kind: Service
metadata:
  name: {{ project_slug | replace("_", "-") }}-web
  labels:
    app: {{ project_slug | replace("_", "-") }}
    component: web
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: 8000
      protocol: TCP
      name: http
  selector:
    app: {{ project_slug | replace("_", "-") }}
    component: web
